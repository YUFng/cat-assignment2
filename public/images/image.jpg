*{
    margin: 0;
    padding: 0;
}

.main{
    width: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0) 50%, rgba(255, 255, 255) 50%), url(image.jpg) center;
    background-size: cover;
    height: 109vh;
}

.navbar{
    width: 1200px;
    height: 75px;
    margin: auto;
}

.icon{
    width: 200px;
    float: left;
    height: 70px;
}

.logo{
    color: #ff7200;
    font-size: 35px;
    font-family: Ariel;
    padding-left: 20px;
    float: left;
    padding-top: 10px;
}

.menu  {
    display: flex;
    width: 400px;
    float: left;
    height: 70px;
}

ul{
    display: flex;
    justify-content: center;
    align-items: center;
}

ul li{
    list-style: none;
    margin-left: 62px;
    margin-top: 27px;
    font-size: 14px;
}

ul li a{
    text-decoration: none;
    color: #d00000;
    font-family: Ariel;
    font-weight: bold;
    transition: 0.5s ease-in-out;
}

ul li a:hover{
    color: #ff7200;
}

.search{
    width: 330px;
    float: left;
    margin-left: 270px;
}

.srch{
    font-family: 'Ariel';
    width: 200px;
    height: 40px;
    background: transparent;
    border: 1px solid #ff7200;
    margin-top: 13px;
    color: #d00000;
    border-right: none;
    font-size: 16px;
    float: left;
    padding-top: 10px;
    border-bottom: 5px;
    border-bottom-left-radius: 5px;
}

.btn{
    width: 100px;
    height: 40px;
    background: #ff7200;
    border: 2px solid #ff7200;
    margin-top: 13px;
    color: #d00000;
    font-size: 16px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.btn:focus{
    outline: none;
}

.srch:focus{
    outline: none;
}

.content{
    width: 1200px;
    height: auto;
    margin: auto;
    color: #d00000;
    position: relative;
}

.content .par{
    padding-left: 20px;
    padding-right: 25px;
    font-family: 'Ariel';
    letter-spacing: 1.2px;
    line-height: 30px;
}

.content h1{
    font-family: 'Ariel';
    font-size: 48px;
    padding-left: 20px;
    margin-top: 9%;
    letter-spacing: 2px;
}

.content .cn{
    width: 160px;
    height: 40px;
    background: #ff7200;
    border: none;
    margin-bottom: 20px;
    margin-left: 18px;
    border-radius: 10px;
    cursor: pointer;
    transition: 1s ease-in-out;
}

.content .cn a{
    text-decoration: none;
    color: #d00000;
    transition: 0.5s ease-in-out;
}

.cn:hover{
    background-color: #ff2;
}

.content span{
    color: #d00000;
    font-size: 60px;
}

.form{
    width: 250px;
    height: 380px;
    background: linear-gradient(to top, rgba(0, 0, 0.8)50%, rgba(0, 0, 0.8)50%);
    position: absolute;
    top: -20px;
    left: 870px;
    border-radius: 10px;
    padding: 25px;
}

.form h2{
    width: 220px;
    font-family: 'Ariel';
    color: #d00000;
    font-size: 22px;
    text-align: center;
    background-color: #ff7200;
    border-radius: 10px;
    margin: 2px;
    padding: 1px;
}

.form input{
    width: 240px;
    height: 35px;
    background: transparent;
    border-bottom: 1px solid #ff7200;
    border-top: none;
    border-right: none;
    border-left: none;
    color: #d00000;
    font-size: 15px;
    letter-spacing: 1px;
    margin-top: 30px;
    font-family: 'Ariel';
}

.form textarea{
    width: 240px;
    height: 35px;
    background: transparent;
    border-bottom: 1px solid #ff7200;
    border-top: none;
    border-right: none;
    border-left: none;
    color: #d00000;
    font-size: 15px;
    letter-spacing: 1px;
    margin-top: 30px;
    font-family: 'Ariel';
}

.form input:focus{
    outline: none;
}

::placeholder{
    color: #fff;
    font-family: 'Ariel', cursive;
}

.btnn{
    width: 240px;
    height: 40px;
    background: #ff7200;
    border: none;
    margin-top: 30px;
    font-size: 18px;
    border-radius: 10px;
    color: #ffffff;
    cursor: pointer;
    transition: 0.5s ease;
}

.btnn:hover{
    background: #ffff22;
    color: #ffffff;
}

.btnn a{
    text-decoration: none;
    color: #000;
    font-weight: bold;
}

.form .link{
    font-family: 'Ariel', cursive;
    font-size: 15px;
    padding-top: 20px;
    text-align: center;
}

.form .link a{
    text-decoration: none;
    color: #ffffff;
}

.liw{
    padding-top: 15px;
    padding-bottom: 10px;
    text-align: center;
}

.icons a{
    text-decoration: none;
    color: #ff00ff;
}

.icons ion-icon{
    color: white;
    font-size: 30px;
    padding-left: 25px;
    transition: 0.3s ease-in-out;
}

.icons ion-icon:hover{
    color: #ff7200;
}
